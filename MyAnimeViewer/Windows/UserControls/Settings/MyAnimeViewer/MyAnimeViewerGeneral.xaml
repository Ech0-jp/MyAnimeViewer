<UserControl x:Class="MyAnimeViewer.Windows.UserControls.Settings.MyAnimeViewer.MyAnimeViewerGeneral"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyAnimeViewer.Windows.UserControls.Settings.MyAnimeViewer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{DynamicResource Montserrat}">
        <GroupBox Header="General">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <CheckBox  Name="cb_ShowLogin" Checked="cb_ShowLogin_Checked" Unchecked="cb_ShowLogin_Unchecked">
                        <ContentControl>
                            <TextBlock Text="Show Login Dialog" Style="{DynamicResource Montserrat}" />
                        </ContentControl>
                    </CheckBox>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>
