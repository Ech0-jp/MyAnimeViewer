<UserControl x:Class="MyAnimeViewer.Windows.UserControls.Settings.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyAnimeViewer.Windows.UserControls.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel Style="{StaticResource Montserrat}">
        <TreeView Name="tv_Options" MinWidth="150">
            <TreeViewItem Header="Sites">
                <TreeViewItem Name="tvi_SitesAniList" Header="AniList" Selected="tvi_SitesAniList_Selected" />
                <TreeViewItem Name="tvi_SitesCrunchyroll" Header="Crunchyroll" Selected="tvi_SitesCrunchyroll_Selected" />
            </TreeViewItem>
            <TreeViewItem Header="MyAnimeViewer">
                <TreeViewItem Name="tvi_MyAnimeViewerGeneral" Header="General" Selected="tvi_MyAnimeViewerGeneral_Selected" />
            </TreeViewItem>
        </TreeView>
        <ContentControl Name="cc_Options" />
    </DockPanel>
</UserControl>
